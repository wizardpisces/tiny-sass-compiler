{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs", //support: npm run test-source
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "declaration": true,
        "declarationDir": "dist/types", //support api-extractor.json bundle ts config mainEntryPointFilePath
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "jest",
            "node"
        ],
        "rootDir": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "~": [
                "/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}