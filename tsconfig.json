{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": false,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "jsx": "preserve",
        "lib": ["esnext", "dom"],
        "types": [
            "jest"
        ],
        "rootDir": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~": [
                "/"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
