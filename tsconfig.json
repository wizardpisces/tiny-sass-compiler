{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "declarationDir": "dist/types",
        "jsx": "preserve",
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "jest",
            "node"
        ],
        "rootDir": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~": [
                "/"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}