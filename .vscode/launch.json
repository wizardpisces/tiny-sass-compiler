    "version": "0.2.0",
    "configurations": [{
        "name": "tiny-sass",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/test.js",
        "stopOnEntry": false,
        "args": ["${fileBasename}", "--runInBand", "--detectOpenHandles"],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": [
            "-r",
            "ts-node/register"
        ],
        "preLaunchTask": null,
        "runtimeExecutable": null,
        "env": {
            "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "sourceMaps": true
    }]
}
